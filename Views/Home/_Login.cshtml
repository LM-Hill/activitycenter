@model LoginUser

<h3>Login</h3>
<div class="card-body">
    <form action="/login" method="post">
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label>Email:</label>
                    <input asp-for="LoginEmail" class="form-control" />
                    <span asp-validation-for="LoginEmail" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label>Password:</label>
                    <input asp-for="LoginPassword" class="form-control" />
                    <span asp-validation-for="LoginPassword" class="text-danger"></span>
                </div>
            </div>
        </div>
        <input type="submit" class="btn btn-outline-danger" value="Login">
    </form>
</div>